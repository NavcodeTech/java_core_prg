package day5;

public class StringPrg4 {

	public static void main(String[] args) {
		String email="emp_coforge.navasept2001@gmail.com";
		
		int pos=email.indexOf('@');
		if(pos>=0)
			System.out.println("found at: "+pos);
		else
			System.out.println("not found");
		
		if(email.indexOf('@')>=0)
		{
			if(email.endsWith(".com"))
			{
				if(email.startsWith("emp_coforge"))
				{
					System.out.println("valid email");
				}
				else
					System.out.println("Invalid email, it must starts with emp_coforge. ");
				
			}
			else
				System.out.println("Invalid email, it should ends with .com");
		}
		else
			System.out.println("You email doesn't contain @ sign");
		

	}

}
